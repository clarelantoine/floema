extends ../base.pug

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=product.data.image.alt src=product.data.image.url)
        //- img.detail__media__image__model(alt=product.data.model.alt src=product.data.model.url)

      .detail__information
        p.detail__information__collection=product.data.collection.data.title

        h1.detail__information__title=product.data.title

        .detail__information__content
          .detail__information__highlights
            each highlight in product.data.highlights
              p.detail__information__highlight
                //- use(href=`sprite-${highlight.highlights_icon.toLowerCase()}`)
                if highlight.highlights_icon === 'Arrow'
                  svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="currentColor" opacity="0.4" d="M14.84,26.61c-0.26,0-0.52-0.1-0.71-0.3c-0.39-0.39-0.38-1.03,0.01-1.41l11.31-11.2c0.39-0.39,1.03-0.38,1.41,0.01c0.39,0.39,0.39,1.03-0.01,1.41l-11.31,11.2C15.35,26.51,15.1,26.61,14.84,26.61z")
                    path(fill="currentColor" opacity="0.4" d="M20,40C8.97,40,0,31.03,0,20C0,8.97,8.97,0,20,0s20,8.97,20,20C40,31.03,31.03,40,20,40z M20,1C9.52,1,1,9.52,1,20s8.52,19,19,19s19-8.52,19-19S30.48,1,20,1z")
                    path(fill="currentColor" d="M30.75,9.86l-0.66,2.33l-0.05,2.57l-1.93-2.28l-2.31-1.91l2.59-0.05L30.75,9.86z")
                    path(fill="currentColor" d="M10.25,30.16l0.66-2.33l0.05-2.57l1.93,2.28l2.31,1.91l-2.59,0.05L10.25,30.16z")

                if highlight.highlights_icon === "Star"
                  svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(fill="currentColor" d="M24.26,9.87l-2.76,8.6l8.72-2.63l-8.16,4.13l8.15,4.26l-8.71-2.82l2.82,8.91l-4.26-8.34l-4.14,8.15l2.63-8.72l-8.6,2.75l8.15-4.2l-8.34-4.33l8.78,2.82l-2.82-8.78l4.33,8.34L24.26,9.87z")
                    path(fill="currentColor" opacity="0.4" d="M20,40C8.97,40,0,31.03,0,20S8.97,0,20,0s20,8.97,20,20S31.03,40,20,40z M20,1C9.52,1,1,9.52,1,20s8.52,19,19,19s19-8.52,19-19S30.48,1,20,1z")

                span.detail__information__highlight__text!=highlight.highlights_text.replace(/\n/g, '<br>')

          .detail__information__list
            each item in product.data.information
              p.detail__information__item
                strong.detail__information__item__title=item.information_label

                span.detail__information__item__description!=item.information_description.replace(/\n/g, '<br>')

          a.detail__information__link(href=product.data.link_url.url target="_blank")=product.data.link_text

      button.detail__button(href="#") Close
        svg.detail__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 124 60")
          path(stroke="currentColor" fill="none" d="M62,0.5c33.97,0,61.5,13.21,61.5,29.5S95.97,59.5,62,59.5S0.5,46.29,0.5,30S28.03,0.5,62,0.5z")
